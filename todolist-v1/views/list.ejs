<%- include("header") -%>

<div class="box">
  <h1 id="heading"><%= listTitle %></h1>
  <ul>
    <% for (let i=0; i< newListItems.length; i++) { %>

    <div class="item">
      <input type="checkbox" />
      <p value=<%= newListItems[i] %>><%= newListItems[i] %></p>
      <span class="item__remove" id="remove"> X </span>
    </div>
    <% } %>
  </ul>
  <form class="item" action="/" method="post">
    <input
      type="text"
      name="newItem"
      placeholder="New item"
      autocomplete="off"
    />
    <button type="submit" name="list" value=<% listTitle %>>+</button>
  </form>
</div>

<%- include("footer") -%>
